@model HomeBlogViewModel
@{
    ViewData["Title"] = "Home Blog Manager";
    ViewData.AddActivePage(ManageNavPages.HomeNews);
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <form asp-action="CreateBlog" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="File"></label>
            <input asp-for="File" accept=".png, .jpg, .jpeg" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="preview">
                <p>No files currently selected for upload</p>
            </div>
        </div>
        <div class="form-group">
            <textarea asp-for="Content" id="editor" name="input"></textarea>
        </div>
        <button id="toHide" type="submit" class="btn btn-success">Submit</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/ImageValidation.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link rel="stylesheet" href="~/lib/CLEditor/jquery.cleditor.css" />
    <script src="~/lib/CLEditor/jquery.cleditor.min.js" asp-append-version="true"></script>
    <script>$(document).ready(function () { $("#editor").cleditor(); });</script>
}
