@model CreateChromePropositionViewModel
@{
    ViewData["Title"] = "Create proposal Chrome";
    ViewData.AddActivePage(ManageNavPages.ChromeProposition);
}

<h2>ChromeProposition</h2>
@Html.Partial("_StatusMessage",Model.StatusMessage)
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control  jscolor" value="FFFFFF" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes"></label>
                <textarea asp-for="Notes" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create proposition</button>
        </form>
    </div>
</div>
<div class="row">
    <h2>Your Chrome Propositions</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Status</th>
                <th>Notes</th>
                <th>Date</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chrome in ViewBag.ChromePropositions)
            {
                <tr>
                    <td>@chrome.Status</td>
                    <td>@chrome.Notes</td>
                    <td>@chrome.Created_at</td>
                    <td><input type="color" value="#@chrome.Color" disabled/></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/jscolor.min.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

