@model CreateAquaPropositionViewModel
@{
    ViewData["Title"] = "Create proposal aquaprint";
    ViewData.AddActivePage(ManageNavPages.AquaProposition);
}

<h2>AquaProposition</h2>
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" accept=".png, .jpg, .jpeg" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="preview">
                    <p>No files currently selected for upload</p>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Notes"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <button id="toHide" type="submit" class="btn btn-default">Create proposition</button>
        </form>
    </div>
</div>
@section Scripts {
    <script src="~/js/ImageValidation.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
